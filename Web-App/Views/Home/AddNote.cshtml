@using Microsoft.AspNetCore.Mvc.TagHelpers
@model FirstLab.Business.Models.Request.NoteRequest

<div>
    <form method="post" asp-controller="Home" asp-action="AddNote">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label"> Заголовок</label><br />
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Text" class="form-label"> Текст</label><br />
            <input asp-for="Text" class="form-control" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>
</div>