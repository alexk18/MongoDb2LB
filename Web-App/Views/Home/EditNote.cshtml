@model FirstLab.Data.Models.Note

<div>
    <form method="post" asp-controller="Home" asp-action="EditNote">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="mb-3">
            <label asp-for="Title" class="form-label">Заголовок</label><br />
            <input asp-for="Title" class="form-control" value="@Model.Title" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Text" class="form-label"> Текст</label><br />
            <input asp-for="Text" class="form-control" value="@Model.Text" />
            <span asp-validation-for="Text" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <input type="submit" value="Сохранить" class="btn btn-primary" />
        </div>
    </form>
</div>